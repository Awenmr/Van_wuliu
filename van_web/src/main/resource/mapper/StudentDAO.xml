<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.van.mapper.StudentDAO">

    <resultMap type="Student" id="studentMap">
        <id property="stuId" column="stu_id"/>
        <result property="stuName" column="stu_name"/>
        <result property="stuPwd" column="stu_pwd"/>
        <result property="stuAddress" column="stu_address"/>

    </resultMap>

    <select id="findAll" resultMap="studentMap">
			select * from student
	</select>

    <select id="findone" resultMap="studentMap" parameterType="String">
			select * from student where stu_id=#{id}
	</select>

    <select id="update" resultMap="studentMap" parameterType="com.van.moudle.Student">
			update student set stu_name=#{stuName} , stu_pwd=#{stuPwd}  , stu_address=#{stuAddress}   where stu_id=#{stuId}
	</select>








</mapper>
